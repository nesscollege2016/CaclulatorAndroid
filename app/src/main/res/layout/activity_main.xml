<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ness.tomer.edu.helloandroid.MainActivity"
    android:id="@+id/ack">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="0"
        android:id="@+id/tvDisplay"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#dddddd" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="7"
        android:onClick="numberClicked"
        android:id="@+id/btn7"
        android:layout_below="@+id/tvDisplay"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
         />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="8"
        android:onClick="numberClicked"
        android:id="@+id/btn8"
        android:layout_below="@+id/tvDisplay"
        android:layout_toRightOf="@+id/btn7"
        android:layout_toEndOf="@+id/btn7" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="9"
        android:onClick="numberClicked"
        android:id="@+id/btn9"
        android:layout_below="@+id/tvDisplay"
        android:layout_toRightOf="@+id/btn8"
        android:layout_toEndOf="@+id/btn8" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="%"
        android:onClick="operatorClicked"
        android:layout_marginTop="4dp"
        android:background="#f3943e"
        android:id="@+id/btnDiv"
        android:layout_below="@+id/tvDisplay"
        android:layout_toRightOf="@+id/btn9"
        android:layout_toEndOf="@+id/btn9" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="4"
        android:onClick="numberClicked"
        android:id="@+id/btn4"
        android:layout_below="@+id/btn7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="5"
        android:onClick="numberClicked"
        android:id="@+id/btn5"
        android:layout_below="@+id/btn8"
        android:layout_toRightOf="@+id/btn4"
        android:layout_toEndOf="@+id/btn4" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="6"
        android:onClick="numberClicked"
        android:id="@+id/btn6"
        android:layout_below="@+id/btn8"
        android:layout_toRightOf="@+id/btn8"
        android:layout_toEndOf="@+id/btn8" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="X"
        android:onClick="operatorClicked"
        android:layout_marginTop="4dp"
        android:background="#f3943e"
        android:id="@+id/btnMult"
        android:layout_below="@+id/btn9"
        android:layout_toRightOf="@+id/btn6"
        android:layout_toEndOf="@+id/btn6" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="1"
        android:onClick="numberClicked"
        android:id="@+id/btn1"
        android:layout_below="@+id/btn4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="2"
        android:onClick="numberClicked"
        android:id="@+id/btn2"
        android:layout_alignTop="@+id/btn1"
        android:layout_toRightOf="@+id/btn1"
        android:layout_toEndOf="@+id/btn1" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="3"
        android:onClick="numberClicked"
        android:id="@+id/btn3"
        android:layout_alignTop="@+id/btn2"
        android:layout_alignLeft="@+id/btn6"
        android:layout_alignStart="@+id/btn6" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="-"
        android:onClick="operatorClicked"
        android:background="#f3943e"
        android:id="@+id/btnMinus"
        android:layout_below="@+id/btn6"
        android:layout_toRightOf="@+id/btn6"
        android:layout_toEndOf="@+id/btn6" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="0"
        android:onClick="numberClicked"
        android:id="@+id/btn0"
        android:layout_below="@+id/btn1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:layout_alignRight="@+id/btn2"
        android:layout_alignEnd="@+id/btn2" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="+"
        android:onClick="operatorClicked"
        android:id="@+id/btnPlus"
        android:layout_below="@+id/btn2"
        android:background="#f3943e"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/btn3"
        android:layout_toEndOf="@+id/btn3" />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="="
        android:onClick="evaluateClicked"
        android:id="@+id/btnEqauls"
        android:layout_below="@+id/btn2"
        android:layout_toLeftOf="@+id/btnPlus"
        android:layout_alignLeft="@+id/btn3"
        android:layout_alignStart="@+id/btn3" />

</RelativeLayout>
